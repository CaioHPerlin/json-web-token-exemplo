<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/style.css">
  <title>Cadastro</title>
</head>
<body>
  <main>
    <h1>Cadastre-se</h1>
    <form onsubmit="check()" action="cadastrar" method="POST">
      <div class="input-container">
        <input required type="text" placeholder="Usuário" name="usuario">
        <input required type="password" placeholder="Senha" name="senha">
        <input required type="password" placeholder="Confirme sua Senha" name="senha">
      </div>
      <div class="button-container">
        <input type="reset" value="Limpar">
        <input type="submit" value="Registrar"/>
      </div>
    </form>
  </main>
  <script>
    const check = () => {
        const c1 = document.getElementsByName("senha")[0].value;
        const c2 = document.getElementsByName("senha")[1].value;

        if(c1 != c2){ 
            alert("As senhas não batem"); 
        }
    }
  </script>
</body>
</html>